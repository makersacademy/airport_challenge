def get_weather
  weather_conditions = ["Sunny","Cloudy","Stormy","Raining","Snowing"]
  x = rand(weather_conditions.length)
  weather_condition = weather_conditions[x]
  puts "Today it is #{weather_condition}"
  return weather_condition
end



