#!/bin/bash

# Usage: tdd.feature-test [object-name]

USAGE='usage:\ttdd.feature-test [object-name]'

# TODO Logic needs to add case to print USAGE

if [[ "$1" ]] ; then
  TEST_FILE="./irb/$1.irb"
  if [[ ! -f $TEST_FILE ]] ; then
    echo -e "$TEST_FILE not found"
    exit 1
  fi
else
  echo "No test file"
  TEST_FILE=""
fi

clear
if [[ "$TEST_FILE" ]] ; then
  irb < $TEST_FILE
else
  irb
fi